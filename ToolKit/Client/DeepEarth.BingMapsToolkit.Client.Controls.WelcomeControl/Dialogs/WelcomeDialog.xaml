<controls:ChildWindow x:Class="DeepEarth.BingMapsToolkit.Client.Controls.WelcomeDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DeepEarth.BingMapsToolkit.Client.Common;component/Resources/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <controls:ChildWindow.Style>
        <StaticResource ResourceKey="ChildWindowStyle"/>
    </controls:ChildWindow.Style>
    
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
			<RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
		<Grid Name="ContentGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,0,20,0"></Grid>
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>