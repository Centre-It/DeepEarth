<UserControl x:Class="ExampleControlBing.AppDemos.StoreLocatorExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:m="clr-namespace:Microsoft.Maps.MapControl;assembly=Microsoft.Maps.MapControl"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:f="clr-namespace:DeepEarth.BingMapsToolkit.Client.Controls;assembly=DeepEarth.BingMapsToolkit.Client.Controls.Find"
	xmlns:lp="clr-namespace:DeepEarth.BingMapsToolkit.Client.Controls;assembly=DeepEarth.BingMapsToolkit.Client.Controls.LayerPanel"
	xmlns:c="clr-namespace:DeepEarth.BingMapsToolkit.Client.Controls;assembly=DeepEarth.BingMapsToolkit.Client.Controls.CoordinatePanel">
    <Grid x:Name="LayoutRoot" Background="White">
		<m:Map x:Name="map" NavigationVisibility="Collapsed" CredentialsProvider="{StaticResource MyCredentials}" />
		<f:FindControl Name="find" MapName="map" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4,4,4,4"/>
		<lp:TreeViewLayerPanel Name="layerPanel" MapName="map" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4,4,4,4"/>
		<c:CoordinatePanel Name="coord" MapName="map" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4,4,4,4"/>
	</Grid>
</UserControl>
