<UserControl x:Class="ExampleControlBing.ControlDemos.SnapshotExample"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:m="clr-namespace:Microsoft.Maps.MapControl;assembly=Microsoft.Maps.MapControl" 
    xmlns:lp="clr-namespace:DeepEarth.BingMapsToolkit.Client.Controls;assembly=DeepEarth.BingMapsToolkit.Client.Controls.LayerPanel"
	xmlns:s="clr-namespace:DeepEarth.BingMapsToolkit.Client.Controls;assembly=DeepEarth.BingMapsToolkit.Client.Controls.Snapshot">
	<Grid x:Name="LayoutRoot">
		<m:Map x:Name="map" CredentialsProvider="{StaticResource MyCredentials}" />
		<lp:AccordionLayerPanel Name="layerPanel" MapName="map" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4,4,4,4"/>
		<s:Snapshot VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,50" Name="snapshot" MapName="map" />
	</Grid>
</UserControl>
