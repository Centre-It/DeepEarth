<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Logo="clr-namespace:DeepEarth.Client.Controls;assembly=DeepEarth.Client.Controls.Logo">
    <Style TargetType="Logo:Logo">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Logo:Logo">
                    <Grid x:Name="LayoutRoot">
                        <HyperlinkButton NavigateUri="http://deepearth.codeplex.com" TargetName="_blank">
                            <Image Height="30" Source="/DeepEarth.Client.Controls.Logo;component/Images/DeepEarthMap.png"></Image>
                        </HyperlinkButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

